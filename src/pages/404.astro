---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Page Not Found - Quang" description="The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center py-20 text-center">
    <h1 class="text-6xl font-bold text-[var(--accent)]">404</h1>
    <p class="text-xl mt-4 text-[var(--text-secondary)]">Page not found</p>
    <p class="mt-2 text-[var(--text-secondary)]">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a
      href="/"
      class="mt-8 px-6 py-3 rounded-lg bg-[var(--text-primary)] text-[var(--bg-primary)] font-medium hover:opacity-90 transition-opacity"
    >
      Go home
    </a>
  </div>
</BaseLayout>
